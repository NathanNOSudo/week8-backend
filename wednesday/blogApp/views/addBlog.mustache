<html>
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
    </head>
    <body>
        <div id="main-menu">
        <a href="/blog">Home</a>
        <a href="/blog/addblog">Add Post</a>
        <a href="/blog/viewall">View All Posts</a>
        {{! <a href="/login">Log In / Sign Up</a> }}
        {{! <a href="/signout">Sign Out</a> }}
        </div>
        <h1>Add Blog Post</h1>
        <form id="addblogform" action="/blog/addblog" method="POST">
            <label for="post-title">Title:</label>
            <br/>
            <input id="post-title" type="text" name="postTitle" required>
            <br/>
            <br/>
            <label for="post-author">Author:</label>
            <br/>
            <input id="post-author" type="text" name="postAuthor" required>
            <br/>
            <br/>
            <label for="postText">Blog Post:</label>
            <br/>
            <textarea id="post-text" rows="60" cols="100" name="postText">
            </textarea>
            <br/>
            <input type="submit" value="Add">
        </form>
    </body>
</html>
